<%= simple_form_for([@teacher, @student]) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag(@student.avatar_url) %>
    <h2><%= @student.full_name %> </h2>


  <div class="form-inline">
   <h4> <%= f.label :last_name %>
       <%= f.text_field :last_name %></h4>
  </div>
  <div class="form-inline">
    <h4><%= f.label :first_name %>
        <%= f.text_field :first_name %></h4>
  </div>
  <div class="form-inline">
    <h4><%= f.label "Student ID" %>
        <%= f.text_field :stu_id %></h4>
  </div>
  <div class="form-inline">
    <h4><%= f.label "Teacher" %>
        <%= f.select :teacher_id, Teacher.all.collect { |l| [l.last_name, l.id] } %></h4>
  </div>

   
    
  <h2>Reading</h2>
  <div class="form-inline">
    <h4><%= f.label :bubble_reading %>
        <%= f.check_box :bubble_reading %></h4>
  </div>
  <div class="form-inline">
    <h4><%= f.label :met_reading_ayp %>
        <%= f.check_box :met_reading_ayp %></h4>
  </div>
  <h2>Math</h2>
    <div class="form-inline">
    <h4><%= f.label :bubble_math %>
        <%= f.check_box :bubble_math %></h4>
  </div>
  <div class="form-inline">
    <h4><%= f.label :met_math_ayp %>
        <%= f.check_box :met_math_ayp %></h4>
  </div>
  <h2>Special Education</h2>
<div class="form-inline">
    <h4><%= f.label "Check if student is in special education" %>
        <%= f.check_box :sped %></h4>
  </div>
 <br>
 <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
