<%= simple_form_for([@teacher, @learningwalk]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inline">
    <%= f.input :start_time, :as => :time, :input_html => { :class => "span1" }, disabled: false %>
    <%= f.input :subject, :collection => ["Reading", "Math", "Science", "Social Studies", "Other"], :prompt => "Select Subject" %>
    <%= f.input :highlights, :label => "Lesson Highlights", :as => :text, :input_html => { :class => "span8" } %>
    <%= f.input :growths, :label => "Growth Opportunities", :as => :text, :input_html => { :class => "span8" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
